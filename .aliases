# Aliases for ls
if command -v exa &> /dev/null; then
  alias ls='exa --icons --classify'
  alias la='exa --icons --classify --all'
  alias ll='exa --icons --classify --long --group --header --links '
  alias lla='exa --icons --classify --long --group --header --links --all'
else
  alias la='ls -A'
  alias ll='ls -lh'
  alias lla='ls -lAh'
fi

# tmux
tms() {
  tmux new-session -As ${1:-default}
}

if command -v vim &> /dev/null; then
  alias vi='vim'
fi

if command -v nvim &> /dev/null; then
  alias vim='nvim'
  alias vi='nvim'
fi

if command -v just &> /dev/null; then
  alias j='just'
  alias jb='just build'
  alias jt='just test'
  alias jtw='just test-watch'
  alias jr='just run'
  alias jrw='just run-watch'
  alias jc='just clean'
fi

[ -f ~/.aliases.local ] && source ~/.aliases.local
