#!/usr/bin/env zsh

case $1 in
    up)
        pamixer -u
        pamixer -i $2
        ;;
    down)
        pamixer -u
        pamixer -d $2
        ;;
    mute)
        if [ "$2" = "mic" ]; then
            pamixer -t --default-source
        else
            pamixer -t
        fi
        ;;
    *)
        echo "Usage: $0 {up|down|mute} [mic]"
        exit 1
        ;;
esac

volume=$(pamixer --get-volume)
mute=$(pamixer --get-mute)
mic_mute=$(pamixer --default-source --get-mute)

if [ "$2" = "mic" ]; then
    if [ "$mic_mute" = "true" ]; then
        icon="microphone-sensitivity-muted"
    else
        icon="microphone-sensitivity-high"
    fi
    notify-send Microphone -t 2000 -i $icon
else
    if [ "$mute" = "true" ]; then
        icon="notification-audio-volume-muted"
        volume=0
    else
        if [ $volume -gt 66 ]; then
            icon="notification-audio-volume-high"
        elif [ $volume -gt 33 ]; then
            icon="notification-audio-volume-medium"
        elif [ $volume -gt 0 ]; then
            icon="notification-audio-volume-low"
        else
            icon="notification-audio-volume-off"
        fi
    fi
    notify-send Volume -t 2000 -h int:value:$volume -i $icon
fi

